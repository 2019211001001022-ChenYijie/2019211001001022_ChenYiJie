<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--add code about new servlet-->
    <servlet>
        <servlet-name>anyName</servlet-name><!--give any name-->
        <servlet-class>com.dabing.week2.demo.HelloWorldServlet</servlet-class><!--package name of servlet class -->
    </servlet>
    <servlet-mapping>
        <servlet-name>anyName</servlet-name>
        <url-pattern>/hello</url-pattern><!--url must start with/-->
    </servlet-mapping>
    <servlet>
        <servlet-name>LifeCycleServlet</servlet-name>
        <servlet-class>com.dabing.week3.demo.LifeCycleServlet</servlet-class>
    </servlet>
    <!--automatic code-->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.dabing.week3.demo.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JDBCDemoServlet</servlet-name>
        <servlet-class>com.dabing.week4.demo.JDBCDemoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LifeCycleServlet</servlet-name>
        <url-pattern>/life</url-pattern><!-- url must start with / -->
    </servlet-mapping>
    <!--/life == LifeCycleServlet == com.dabing.week3.demo.LifeCycleServlet-->
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern><!-- write this url in action-->
    </servlet-mapping>
    <!--x= 5,x= a so we can say a=5
    so /hello==com.dabing.week2.demo.HelloWorldServlet-->
    <servlet>
        <servlet-name>JDBCDemoServet</servlet-name>
        <servlet-class>com.dabing.week4.demo.JDBCDemoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JDBCDemoServlet</servlet-name>
        <url-pattern>/jdbc</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ConfigDemoServlet</servlet-name>
        <servlet-class>com.dabing.week4.demo.ConfigDemoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConfigDemoServlet</servlet-name>
        <url-pattern>/config</url-pattern>
    </servlet-mapping>
    <context-param>
        <param-name>name</param-name>
        <param-value>ChenYiJie</param-value>
    </context-param>
    <context-param>
        <param-name>student-id</param-name>
        <param-value>2019211001001022</param-value>
    </context-param>
    <context-param>
        <param-name>driver</param-name>
        <param-value>com.microsoft.sqlserver.jdbc.SQLServerDriver</param-value>
    </context-param>
    <context-param>
        <param-name>url</param-name>
        <param-value>jdbc:sqlserver://localhost:1433;DatabaseName=userdb</param-value>
    </context-param>
    <context-param>
        <param-name>Username</param-name>
        <param-value>sa</param-value>
    </context-param>
    <context-param>
        <param-name>Password</param-name>
        <param-value>admin123456789</param-value>
    </context-param>
</web-app>